// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id
  email    String  @unique
  userId   String?
  password String?
  userName String?
  post     Post[]
}

model Post {
  id      String @id @default(uuid())
  title   String
  details String
  userID  String
  image   String
  name    String
  email   String
  user    User   @relation(fields: [userID], references: [id])
}
